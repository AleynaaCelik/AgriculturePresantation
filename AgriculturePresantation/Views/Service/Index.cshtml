@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yeni Hizmet Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Düzenle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger"></a>Sil</td>
            <td><a href="/Service/EditService/@item.ServiceID" class="btn btn-outline-success"></a>Düzenle</td>
        </tr>
    }
</table>
<a href="/Test/AddService/" class="btn btn-outline-info">Yeni Hizmet Girişi</a>
